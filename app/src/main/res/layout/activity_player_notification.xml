<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90FFFFFF"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <ImageView
            android:id="@+id/notification_icon_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/list_item_radio_avatar_desc"
            android:src="@drawable/radio_item_avatar_blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_text_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="this is radio 1"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#FF000000"
                tools:text="This is radio 1" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ellipsize="marquee"-->
            <!--android:marqueeRepeatLimit="marquee_forever"-->
            <!--android:singleLine="true"-->
            <!--android:text="currently playing"-->
            <!--android:textAppearance="@android:style/TextAppearance.Small"-->
            <!--android:textColor="#CC000000"-->
            <!--android:id="@+id/notification_text_subtext"-->
            <!--tools:text="Currently playing a beautify song" />-->


        </LinearLayout>


        <ImageButton
            android:id="@+id/action_notification_play_stop_toggle"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent" />

        <ImageButton
            android:id="@+id/action_notification_close"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent" />


    </LinearLayout>

</LinearLayout>