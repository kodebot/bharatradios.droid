<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/radio_player_controls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_medium_margin"
    android:layout_marginLeft="@dimen/card_view_medium_margin"
    android:layout_marginRight="@dimen/card_view_medium_margin"
    android:focusableInTouchMode="true"
    android:layout_gravity="bottom"
    android:layout_weight="0"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

              <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/action_radio_player_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    app:srcCompat="@drawable/ic_skip_previous_black_24dp_wrapped"
                    android:tint="#FFFFFFFF"
                    app:fabSize="mini" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/action_radio_player_play_stop_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:src="@drawable/ic_play_arrow_black_36dp_wrapped"
                    android:tint="#FFFFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/action_radio_player_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    app:srcCompat="@drawable/ic_skip_next_black_24dp_wrapped"
                    android:tint="#FFFFFFFF"
                    app:fabSize="mini" />

            </LinearLayout>


        </LinearLayout>
</android.support.v7.widget.CardView>